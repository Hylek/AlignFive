.rootpanel-hide {
    position: absolute;
    bottom: 100%;
    opacity: 0;
    transition-duration: 0.4s;
    transition-timing-function: ease-in-out-sine;
}

.rootpanel {
    position: absolute;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    align-self: center;
    align-content: center;
}

.background {
    background-color: rgb(46, 52, 64);
}

.backButton {
    left: 10px;
    position: absolute;
    bottom: 10px;
    width: 200px;
}
